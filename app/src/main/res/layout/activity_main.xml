<?xml version="1.0" encoding="utf-8"?>
<!-- Layout file for the Main Activity -->
<!-- Made By: Will Conway -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/iu_cream"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/menuBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:title="Capstone Project"
        android:background="@color/iu_cream"
        app:titleTextColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iuLogo"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:scaleType="fitCenter"
        android:src="@drawable/iugoodlogo"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/menuBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="IU Sports Scores"
        app:layout_constraintTop_toBottomOf="@id/iuLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/iu_crimson_dark"
        android:textStyle="bold"
        android:textSize="16pt"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose a sport to begin"
        android:textSize="16sp"
        android:textColor="@color/iu_crimson"
        android:textAlignment="center"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/iu_cream">

        <RadioButton
            android:id="@+id/footballButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Football"
            android:textColor="@color/iu_crimson"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/basketballButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basketball"
            android:textColor="@color/iu_crimson"
            android:padding="8dp" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/seasonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            android:id="@+id/seasonLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Season:"
            android:textSize="16sp"
            android:textColor="@color/iu_crimson"
            android:paddingEnd="8dp" />

        <Spinner
            android:id="@+id/seasonSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/rememberPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember my sport and season"
        android:textColor="@color/iu_crimson"
        app:layout_constraintTop_toBottomOf="@id/seasonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/viewScoresButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Scores"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/rememberPreferences"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>